{
    "python-envs.defaultEnvManager": "ms-python.python:system",
    "python-envs.pythonProjects": [],
    
    // Copilot Configuration for Search-First Development
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": true,
        "lean4": true
    },
    "github.copilot.inlineSuggest.enable": true,
    "github.copilot.inlineSuggest.suppressSuggestions": false,
    
    // CRITICAL: Force temperature = 1 ONLY for OpenAI models (O3 requirement)
    // NOTE: This does NOT affect Anthropic/Claude models - they use separate config
    "github.copilot.advanced": {
        "temperature": 1
    },
    "github.copilot.chat.advanced": {
        // Only target OpenAI models specifically - leaves others untouched
        "openai/gpt-4o": { "temperature": 1 },
        "openai/o1-preview": { "temperature": 1 },
        "openai/o1-mini": { "temperature": 1 },
        "openai/o3-mini": { "temperature": 1 },
        "openai/o3": { "temperature": 1 },
        "gpt-4o": { "temperature": 1 },
        "o1-preview": { "temperature": 1 },
        "o1-mini": { "temperature": 1 },
        "o3-mini": { "temperature": 1 },
        "o3": { "temperature": 1 }
    },

    // Auto-save to trigger build loop
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 2000,
    
    // Lean-specific settings
    "lean4.input.eagerReplacementEnabled": true,
    "lean4.diagnostics.enableErrorReporting": true,
    "lean4.infoview.autoOpen": true,
    "lean4.infoview.showExpectedType": true,
    "lean4.infoview.showGoalNames": true,
    
    // Enhanced error detection
    "problems.showCurrentInStatus": true,
    "problems.sortOrder": "severity",
    
    // Task automation
    "task.autoDetect": "on",
    "task.slowProviderWarning": false,
    
    // Editor enhancements for the search-first workflow
    "editor.suggest.showMethods": true,
    "editor.suggest.showFunctions": true,
    "editor.suggest.showKeywords": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    
    // Workspace-specific file associations
    "files.associations": {
        "*.lean": "lean4",
        "copilot-instructions.md": "markdown"
    },
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.reviewSelection.instructions": [
        "MANDATORY: Read copilot-instructions.md before ANY code edits",
        "CRITICAL: Never use a lemma without checking ordinal-toolkit.md first",
        "REQUIRED: Copy existing patterns from OperatorKernelO6/Meta/ - no guessing"
    ],
    
    // CRITICAL PROJECT RULES
    "github.copilot.chat.projectContext": {
        "instructions": "ALWAYS read copilot-instructions.md and CLAUDE.md first. NEVER guess lemma names - verify in ordinal-toolkit.md. NO sorries in code. Copy existing patterns."
    },
    "editor.codeActions.triggerOnFocusChange": true,
    "editor.autoIndentOnPaste": true
}