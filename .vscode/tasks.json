{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lean build",
      "type": "shell",
      "command": "lake build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": false,
      "problemMatcher": {
        "owner": "lean",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning|info):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Lean build (watch)",
      "type": "shell", 
      "command": "lake build",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "lean-watch",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning|info):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*lake build.*",
          "endsPattern": ".*"
        }
      }
    },
    {
      "label": "Lean check current file",
      "type": "shell",
      "command": "lake",
      "args": ["exe", "lean", "--check", "${file}"],
      "group": "test",
      "isBackground": false,
      "problemMatcher": {
        "owner": "lean",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning|info):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
